<Window x:Class="flower.Autorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:flower"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid Background="#f0f0f0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Margin="20" Background="White">
            <TextBlock Text="Введите данные для авторизации" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 10"/>
            <Label Content="Введите логин"/>


            <TextBox x:Name="LoginTextBox"  FontSize="14" Margin="0 0 0 10" Padding="8" BorderThickness="1"/>
            <Label Content="Введите пароль"/>
            <PasswordBox x:Name="PasswordBox"  FontSize="14" Margin="0 0 0 10" Padding="8" BorderThickness="1"/>

            <Button Content="Войти" Click="LoginButton_Click" HorizontalAlignment="Center" Width="100" Padding="10" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
